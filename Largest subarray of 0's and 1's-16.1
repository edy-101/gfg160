class Solution:
    def maxLen(self, arr):
        # code here
        n = len(arr)
        hm = {}
        ml = 0
        cs = 0

        for i in range(n):
            cs += -1 if arr[i] == 0 else 1

            if cs==0:
                ml = i+1

            if cs in hm:
                ml = max(ml, i - hm[cs])
            else:
                hm[cs] = i

        return ml



